{
  "projectType": "application",
  "sourceRoot": "apps/zapisywarka-api",
  "targets": {
    "build": {
      "executor": "@nx-dotnet/core:build",
      "outputs": ["dist/apps/zapisywarka-api"],
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        }
      }
    },
    "serve": {
      "executor": "@nx-dotnet/core:serve",
      "options": {
        "configuration": "Debug"
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        }
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "metadata": {
          "images": ["localhost:9009/zapisywarka-api"],
          "tags": [
            "type=schedule",
            "type=semver,pattern={{version}},value=v1.0.1"
          ],
          "labels": ["app=zapisywarka-api"],
          "flavor": ["latest=true"]
        }
      }
    },
    "build-docker": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "docker build -f apps/zapisywarka-api/Dockerfile -t zapisywarka/api:latest ."
        ],
        "parallel": false
      }
    },
    "deploy-local": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["kustomize build | kubectl apply -f -"],
        "parallel": false,
        "cwd": "apps/zapisywarka-api/deployment"
      }
    },
    "lint": {
      "executor": "@nx-dotnet/core:format"
    }
  },
  "tags": ["nx-dotnet"]
}
